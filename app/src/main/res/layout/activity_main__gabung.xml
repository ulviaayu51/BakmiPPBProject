<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/bottom_navigation">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#423C3C"
                android:fontFamily="sans"/>
        </androidx.appcompat.widget.Toolbar>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="290dp"
                        android:background="#271717">
                        <TextView
                            android:id="@+id/textView1_beranda2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="BAKMI GMANIA'S REWARDS"
                            android:textStyle="bold"
                            android:fontFamily="sans"
                            android:textSize="11dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/colorPrimary"/>
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="35dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/imageView1_beranda2"
                                    android:layout_width="210dp"
                                    android:layout_height="135dp"
                                    android:src="@drawable/beranda1"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="15dp"/>
                                <ImageView
                                    android:id="@+id/imageView2_beranda2"
                                    android:layout_width="210dp"
                                    android:layout_height="135dp"
                                    android:src="@drawable/beranda2"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="20dp"/>
                                <ImageView
                                    android:id="@+id/imageView3_beranda2"
                                    android:layout_width="210dp"
                                    android:layout_height="135dp"
                                    android:src="@drawable/beranda3"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="20dp"/>
                                <ImageView
                                    android:id="@+id/imageView4_beranda2"
                                    android:layout_width="210dp"
                                    android:layout_height="135dp"
                                    android:src="@drawable/beranda4"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="20dp"/>
                                <ImageView
                                    android:id="@+id/imageView5_beranda2"
                                    android:layout_width="210dp"
                                    android:layout_height="135dp"
                                    android:src="@drawable/beranda5"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="20dp"/>
                            </LinearLayout>
                        </HorizontalScrollView>
                        <TextView
                            android:id="@+id/textView2_beranda2"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:text="Dapatkan hadiah menarik dengan menjadi member Bakmi GM"
                            android:textColor="@color/colorPrimary"
                            android:textSize="21dp"
                            android:fontFamily="sans"
                            android:layout_marginTop="195dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="195dp">
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="350dp">
                                <ImageView
                                    android:id="@+id/imageView6_beranda2"
                                    android:layout_width="280dp"
                                    android:layout_height="180dp"
                                    android:src="@drawable/beranda6"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="15dp"/>
                                <ImageView
                                    android:id="@+id/imageView7_beranda2"
                                    android:layout_width="280dp"
                                    android:layout_height="180dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/beranda7"
                                    android:scaleType="fitXY"/>
                                <ImageView
                                    android:id="@+id/imageView8_beranda2"
                                    android:layout_width="280dp"
                                    android:layout_height="180dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/beranda8"
                                    android:scaleType="fitXY"/>
                                <ImageView
                                    android:id="@+id/imageView9_beranda2"
                                    android:layout_width="280dp"
                                    android:layout_height="180dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/beranda9"
                                    android:scaleType="fitXY"/>
                                <ImageView
                                    android:id="@+id/imageView10_beranda2"
                                    android:layout_width="280dp"
                                    android:layout_height="180dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/beranda10"
                                    android:scaleType="fitXY"/>
                                <ImageView
                                    android:id="@+id/imageView11_beranda2"
                                    android:layout_width="280dp"
                                    android:layout_height="180dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/beranda11"
                                    android:scaleType="fitXY"/>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </FrameLayout>
                    <ImageView
                        android:id="@+id/imageView12_beranda2"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/beranda12"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </ScrollView>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>