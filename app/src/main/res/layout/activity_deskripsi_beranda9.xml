<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeskripsiBeranda9"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#423C3C"
            android:fontFamily="sans"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView_beranda9"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:scaleType="fitXY"
                android:src="@drawable/beranda9"/>
            <TextView
                android:id="@+id/textView1_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="NIKMAT DAN HEMAT"
                android:fontFamily="sans"
                android:textSize="17dp"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:id="@+id/textView2_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="Yuk pesan Bakmi 20 dari menu Nikmat Hemat Bakmi GM!"
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView3_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Pas harga porsinya buat makan siang!"
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView4_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:text="Pastikan kamu mencoba varian menu Nikmat Hemat Bakmi GM lainnya:"
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView5_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Nasi 20"
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView6_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Bakmi 25"
                android:fontFamily="sans"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textView7_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Bakmi 30"
                android:fontFamily="sans"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textView8_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:text="Pesan melalui 1.500.677 atau WhatsApp 0811.1500.677"
                android:fontFamily="sans"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textView9_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:text="Syarat dan Ketentuan"
                android:fontFamily="sans"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textView10_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Berlaku untuk pemesanan melalui Bakmi GM Delivery dan Take Out"
                android:fontFamily="sans"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textView11_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Harga bellum termasuk pajak"
                android:fontFamily="sans"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textView12_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Promo dapat berubah sewaktu-waktu"
                android:fontFamily="sans"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textView13_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:text="SK Berlaku"
                android:fontFamily="sans"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textView14_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Bergabung menjadi Member"
                android:textSize="23dp"
                android:fontFamily="sans"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/textView15_beranda9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Nikmati penawaran menarik, dan banyak lagi dengan program hadiah ekslusif Bakmi GMania. Daftar sekarang !"
                android:textSize="15dp"
                android:fontFamily="sans"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/button_beranda9"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="GABUNG SEKARANG"
                android:textSize="20dp"
                android:fontFamily="sans"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/shape_orange"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
