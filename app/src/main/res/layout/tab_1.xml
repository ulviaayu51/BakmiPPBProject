<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/permainan"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/beranda11"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop">
            </ImageView>

            <ImageView
                android:id="@+id/krispy"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/krispy"></ImageView>

            <ImageView
                android:id="@+id/LemonTea"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/minuman2"></ImageView>

            <ImageView
                android:id="@+id/somayAyam"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/somayayam"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop">
            </ImageView>
            <ImageView
                android:id="@+id/chacha"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/kuahchacha"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop">
            </ImageView>
            <ImageView
                android:id="@+id/NasiAyam"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/nasiayam"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop">
            </ImageView>
            <ImageView
                android:id="@+id/voucher"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/voucher"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop">
            </ImageView>


        </LinearLayout>
    </ScrollView>


</LinearLayout>