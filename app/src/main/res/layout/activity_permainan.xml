<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Permainan">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#423C3C"
            android:fontFamily="sans-serif"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textAlignment="center"
        android:background="@drawable/lala">
        <ImageView
            android:id="@+id/piala"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:srcCompat="@drawable/piala"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gbgmember"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ketgame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ketmain"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/gabsek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gabung"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/orange"/>
    </LinearLayout>

</LinearLayout>