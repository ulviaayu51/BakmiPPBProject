<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeskripsiBeranda8"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#423C3C"
            android:fontFamily="sans"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView_beranda8"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:scaleType="fitXY"
                android:src="@drawable/beranda8"/>
            <TextView
                android:id="@+id/textView1_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:fontFamily="sans"
                android:textColor="@color/black"
                android:text="DOUBLE POINTS"
                android:textSize="17dp"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:id="@+id/textView2_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:text="Hai GMania!"
                android:fontFamily="sans"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textView3_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:text="Promo Double Point untuk member Bakmi GM yang setia!"
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView4_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:text="Syarat dan ketentuan "
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView5_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Periode 3-30 April 2020"
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView6_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Minimal transaksi Rp 75.000 (sblm pajak)"
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView7_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Khusus transaksi melalui Delivery Bakmi GM"
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView8_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Maksimal Double Point yang diperoleh adalah 100 poin dalam 1 transaksi"
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView9_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="- Berlaku khusus member Bakmi GM"
                android:textSize="15dp"
                android:fontFamily="sans"/>
            <TextView
                android:id="@+id/textView10_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Bergabung menjadi Member"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="sans"
                android:gravity="center"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/textView11_beranda8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Nikmati penawaran menarik, dan banyak lagi dengan program hadiah ekslusif Bakmi GMania. Daftar sekarang !"
                android:textSize="15dp"
                android:fontFamily="sans"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/button_beranda8"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="GABUNG SEKARANG"
                android:textSize="20dp"
                android:fontFamily="sans"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/shape_orange"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>