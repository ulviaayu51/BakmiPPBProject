<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeskripsiBeranda1"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#423C3C"
            android:fontFamily="sans-serif"/>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/imageView_beranda1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/beranda1"/>
    <TextView
        android:id="@+id/textView1_beranda1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="SUPER SALE"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/textView2_beranda1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Hai Pecinta Penyetan !"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/textView3_beranda1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Promo Super Sale untuk member Penyetan Warga +62 yang setia !"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/textView4_beranda1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Syarat dan ketentuan"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/textView5_beranda1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="- Berlaku untuk member Penyetan Warga +62"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/textView6_beranda1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="- Periode 20-30 April 2020"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/textView7_beranda1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="- Minimal transaksi pembelian Rp 75.000,-"
        android:textSize="15dp"/>
</LinearLayout>